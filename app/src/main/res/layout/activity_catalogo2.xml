<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Catalogo2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CatÃ¡logo 2"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/txtIdCatalogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/txtNombreCatalogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/txtEdadCatalogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad"
            android:textSize="14dp"/>
        <Button
            android:id="@+id/btnInsertarCatalogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insertar"/>

        <Button
            android:id="@+id/btnActualizarCatalogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar"/>

        <Button
            android:id="@+id/btnBorrarCatalogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borrar"/>
        <Button
            android:id="@+id/btnBuscarCatalogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"/>


    </LinearLayout>


</RelativeLayout>